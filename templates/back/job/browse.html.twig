{% extends 'back/base_admin.html.twig' %}


{% block title %}Jobs{% endblock %}

{% block body %}
    <h1>Browse Jobs</h1>

    {# https://getbootstrap.com/docs/5.0/content/tables/ #}
<table class="table table-hover table-striped">
  {# En-tÃªtes du tableau #}
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
     {# On boucle sur les articles #}
    {% for job in jobs %}        
    <tr>
      <th scope="row">{{ job.id }}</th>
      <td><a href="{{ path('job_read', {id: job.id}) }}">{{ job.name }}</a></td>
      {# @see https://www.php.net/manual/fr/datetime.format.php#refsect1-datetime.format-parameters #}
      <td>
          <a class="btn btn-sm btn-primary" href="#">Modifier</a>
          <a class="btn btn-sm btn-danger" href="#" onclick="return confirm('Voulez-vous supprimez : {{ job.name|e('js') }} ?')">Supprimer</a>
      </td>
    </tr>
    {% endfor %}

  </tbody>
</table>


{% endblock %}
